---
import Layout from "../layouts/Layout.astro";
const { frontmatter } = Astro.props;
const creationDate = new Date(Astro.props.frontmatter.creationdate);
const formattedDate = creationDate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Layout>
  <div class="relative w-full my-10">
    <!-- Image Section -->
    <img
      class="w-full h-auto object-cover"
      src={frontmatter.bannerimage}
      alt={frontmatter.bannertitle}
    />

    <!-- Gradient Overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-t from-maroon via-transparent to-[#94434A00] opacity-80"
    >
    </div>

    <!-- Heading Section -->
    <p
      class="absolute inset-0 flex justify-center items-center px-4 text-center text-white font-semibold md:font-bold top-3/4 transform -translate-y-2/3 md:top-3/4 text-sm md:px-10 md:text-4xl"
    >
      {frontmatter.bannertitle}
    </p>

    <!-- Date Section -->
    <div
      class="flex absolute inset-x-0 top-[76vh] justify-center items-center text-white md:bottom-[12%]"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="stroke-customBeige w-3 h-3 md:w-8 md:h-8"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M8 2v4"></path>
        <path d="M16 2v4"></path>
        <rect width="18" height="18" x="3" y="4" rx="2"></rect>
        <path d="M3 10h18"></path>
        <path d="M8 14h.01"></path>
        <path d="M12 14h.01"></path>
        <path d="M16 14h.01"></path>
        <path d="M8 18h.01"></path>
        <path d="M12 18h.01"></path>
        <path d="M16 18h.01"></path>
      </svg>
      <p class="mx-2 text-xs font-medium sm:text-sm md:text-base lg:text-lg">
        {formattedDate || frontmatter.creationDate}
      </p>
    </div>
  </div>

  <div class="container">
    <div class="md:px-20 px-4">
      <img
        class="w-full h-[30rem] object-none object-center"
        src={frontmatter.section1image}
        alt={frontmatter.section1title}
      />
      <p class="text-maroon font-bold text-xl md:text-3xl my-4">
        {frontmatter.section1title}
      </p>
      <p>
        {frontmatter.section1content}
      </p>
    </div>
  </div>

  <div class="container">
    <div class="md:px-20 px-4 py-10">
      <img
        class="w-full h-[30rem] object-none object-center"
        src={frontmatter.section2image}
        alt={frontmatter.section2title}
      />
      <p class="text-maroon font-bold text-xl md:text-3xl my-4">
        {frontmatter.section2title}
      </p>
      <p>
        {frontmatter.section2content}
      </p>
    </div>
  </div>

  <div class="container">
    <div class="md:px-20 px-4 py-10">
      <img
        class="w-full h-[30rem] object-none object-center"
        src={frontmatter.section3image}
        alt={frontmatter.section3title}
      />
      <p class="text-maroon font-bold text-xl md:text-3xl my-4">
        {frontmatter.section3title}
      </p>
      <p>
        {frontmatter.section3content}
      </p>
    </div>
  </div>

  <div class="md:px-36 md:py-10 px-4">
    <slot/>
  </div>
</Layout>
