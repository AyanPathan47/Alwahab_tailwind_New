---
import Layout from "../layouts/Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout>
    <div class="relative w-full my-10">
        <!-- Image Section -->
        <img
            class="w-full h-auto object-cover"
            src="/assets/images/website-banner-EYE.jpg"
            alt="Banner Image"
        />

        <!-- Gradient Overlay -->
        <div
            class="absolute inset-0 bg-gradient-to-t from-maroon via-transparent to-[#94434A00] opacity-80"
        >
        </div>

        <!-- Heading Section -->
        <p
            class="absolute inset-0 flex justify-center items-center px-4 text-center text-white font-bold text-lg top-2/3 transform -translate-y-2/3 md:top-3/4 md:text-xl md:px-10 lg:text-4xl"
        >
            {frontmatter.bannertitle}
        </p>

        <!-- Date Section -->
        <div
            class="flex absolute inset-x-0 bottom-5 justify-center items-center text-white md:bottom-[12%]"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="stroke-customBeige w-5 h-5 md:w-6 md:h-6 lg:w-8 lg:h-8"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d="M8 2v4"></path>
                <path d="M16 2v4"></path>
                <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                <path d="M3 10h18"></path>
                <path d="M8 14h.01"></path>
                <path d="M12 14h.01"></path>
                <path d="M16 14h.01"></path>
                <path d="M8 18h.01"></path>
                <path d="M12 18h.01"></path>
                <path d="M16 18h.01"></path>
            </svg>
            <p
                class="mx-2 text-xs font-medium sm:text-sm md:text-base lg:text-lg"
            >
                {frontmatter.creationdate}
            </p>
        </div>
    </div>

    <div class="container mx-auto px-4 md:px-20">
        <!-- Main Container -->
        <div class="flex flex-col flex-wrap md:flex-nowrap md:flex-row">
            <div
                class="md:w-1/3 md:mx-8 pt-4 md:pt-0 flex-shrink-0 justify-center items-center"
            >
                <img
                    src={frontmatter.section1image}
                    alt={frontmatter.section1title}
                    class="w-96 h-80 object-cover"
                />
            </div>
            <!-- Text Section -->

            <div class="md:w-2/3">
                <h2 class="md:text-2xl text-lg text-maroon font-bold">
                    {frontmatter.section1title}
                </h2>
                <p
                    class="mt-2 text-grey text-base md:text-lg font-semibold text-justify"
                >
                {frontmatter.section1content}
                </p>
            </div>
        </div>
    </div>
    <div class="md:px-36 md:py-10 px-4">
        <slot/>
    </div>
    <div class="container mx-auto py-10 px-4 md:px-20">
        <!-- Main Container -->
        <div class="flex flex-col flex-wrap md:flex-nowrap md:flex-row">
            <div
                class="md:w-1/3 md:mx-8 pt-4 md:pt-0 flex-shrink-0 justify-center items-center"
            >
                <img
                    src={frontmatter.section2image}
                    alt={frontmatter.section2title}
                    class="w-96 h-80 object-cover"
                />
            </div>
            <!-- Text Section -->

            <div class="md:w-2/3">
                <h2 class="md:text-2xl text-lg text-maroon font-bold">
                    {frontmatter.section2title}
                </h2>
                <p
                    class="mt-2 text-grey text-base md:text-lg font-semibold text-justify"
                >
                    {frontmatter.section2content}
                </p>
            </div>
        </div>
    </div>
</Layout>
