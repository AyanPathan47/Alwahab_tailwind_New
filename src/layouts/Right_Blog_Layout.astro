---
import Layout from "../layouts/Layout.astro";
const { frontmatter} = Astro.props;
const creationDate = new Date(Astro.props.frontmatter.creationdate);
const formattedDate = creationDate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Layout>
  <div class="relative w-full">
    <img
      class="w-full h-auto"
      src={frontmatter.bannerimage}
      alt={frontmatter.bannertitle}
    />
    <div
      class="absolute inset-0 bg-gradient-to-t from-maroon via-transparent to-[#94434A00] opacity-80"
    >
    </div>
    <p
      class="absolute inset-0 flex justify-center md:top-[350px] md:text-4xl px-10 text-center font-bold text-[#ffff]"
    >
      {frontmatter.bannertitle}
    </p>
    <div class="flex absolute inset-0 top-[76vh] justify-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="stroke-customBeige"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-calendar-days"
      >
        <path d="M8 2v4"></path>
        <path d="M16 2v4"></path>
        <rect width="18" height="18" x="3" y="4" rx="2"></rect>
        <path d="M3 10h18"></path>
        <path d="M8 14h.01"></path>
        <path d="M12 14h.01"></path>
        <path d="M16 14h.01"></path>
        <path d="M8 18h.01"></path>
        <path d="M12 18h.01"></path>
        <path d="M16 18h.01"></path>
      </svg>
      <p class="mx-1 text-[#ffff] font-medium text-base md:text-lg">
        {formattedDate || frontmatter.creationDate}
      </p>
    </div>
  </div>

  <div class="container mx-auto px-4 md:px-20 md:py-12">
    <!-- Main Container -->
    <div class="flex flex-col flex-wrap md:flex-nowrap md:flex-row">
      <!-- Text Section -->
      <div class="md:w-2/3">
        <h2 class="md:text-2xl text-lg text-maroon font-bold">
          {frontmatter.section1title}
        </h2>
        <p
          class="mt-2 text-grey text-base md:text-lg font-semibold text-justify"
        >
          {frontmatter.section1content}
        </p>
      </div>

      <!-- Image Section -->
      <div
        class="md:w-1/3 md:mx-8 pt-4 md:pt-0 flex-shrink-0 justify-center items-center"
      >
        <img
          src={frontmatter.section1image}
          alt={frontmatter.section1title}
          class="w-96 h-80 object-cover"
        />
      </div>
    </div>
  </div>
  <div class="container mx-auto px-4 md:px-20">
    <!-- Main Container -->
    <div class="flex flex-col md:flex-row">
      <!-- Text Section -->
      <div class="md:w-2/3">
        <h2 class="md:text-2xl text-lg text-maroon font-bold">
          {frontmatter.section2title}
        </h2>
        <p
          class="mt-2 text-grey text-base md:text-lg font-semibold text-justify"
        >
          {frontmatter.section2content}
        </p>
      </div>

      <!-- Image Section -->
      <div
        class="md:w-1/3 md:mx-8 pt-4 md:pt-0 flex-shrink-0 justify-center items-center"
      >
        <img
          src={frontmatter.section2image}
          alt={frontmatter.section2title}
          class="w-96 h-80 object-cover"
        />
      </div>
    </div>
  </div>
  <div class="container mx-auto md:px-16">
    <slot />
  </div>
  <div class="container mx-auto px-4 md:px-20 py-8">
    <!-- Main Container -->
    <div class="flex flex-col md:flex-row">
      <!-- Text Section -->
      <div class="md:w-2/3">
        <h2 class="md:text-2xl text-lg text-maroon font-bold">
          {frontmatter.section3title}
        </h2>
        <p
          class="mt-2 text-grey text-base md:text-lg font-semibold text-justify"
        >
          {frontmatter.section3content}
        </p>
      </div>

      <!-- Image Section -->
      <div
        class="md:w-1/3 md:mx-8 pt-4 md:pt-0 flex-shrink-0 justify-center items-center"
      >
        <img
          src={frontmatter.section3image}
          alt={frontmatter.section3title}
          class="w-96 h-80 object-cover"
        />
      </div>
    </div>
  </div>
</Layout>
