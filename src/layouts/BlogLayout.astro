---
import Layout from "../layouts/Layout.astro";
export interface Props {
  bannertitle: string;
  creationdate: number;
  section1title: string;
  section1content: string;
  section1image: string;
  section2title: string;
  section2content: string;
  section2image: string;
  section3title: string;
  section3content: string;
  section3image: string;
}

const {
  bannertitle,
  creationdate,
  section1title,
  section1content,
  section1image,
  section2title,
  section2content,
  section2image,
  section3title,
  section3content,
  section3image,
} = Astro.props;
---

<Layout>
  <div class="relative w-full">
    <img
      class="w-full h-auto"
      src="/assets/images/website-banner-EYE.jpg"
      alt=""
      srcset=""
    />
    <div
      class="absolute inset-0 bg-gradient-to-t from-maroon via-transparent to-[#94434A00] opacity-80"
    >
    </div>
    <p
      class="absolute inset-0 flex justify-center md:top-[350px] md:text-4xl px-10 text-center font-bold text-[#ffff]"
    >
      {bannertitle}
    </p>
    <div class="flex absolute inset-0 top-[500px] justify-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="stroke-customBeige"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-calendar-days"
      >
        <path d="M8 2v4"></path>
        <path d="M16 2v4"></path>
        <rect width="18" height="18" x="3" y="4" rx="2"></rect>
        <path d="M3 10h18"></path>
        <path d="M8 14h.01"></path>
        <path d="M12 14h.01"></path>
        <path d="M16 14h.01"></path>
        <path d="M8 18h.01"></path>
        <path d="M12 18h.01"></path>
        <path d="M16 18h.01"></path>
      </svg>
      <p class="mx-1 text-[#ffff] font-medium text-base md:text-lg">
        {creationdate}
      </p>
    </div>
  </div>

  <div class="container mx-auto px-4 md:px-20 md:py-12">
    <!-- Main Container -->
    <div class="flex flex-col flex-wrap md:flex-nowrap md:flex-row">
      <!-- Text Section -->
      <div class="md:w-2/3">
        <h2 class="md:text-2xl text-lg text-maroon font-bold">
          {section1title}
        </h2>
        <p
          class="mt-2 text-grey text-base md:text-lg font-semibold text-justify"
        >
          {section1content}
        </p>
      </div>

      <!-- Image Section -->
      <div
        class="md:w-1/3 md:mx-8 pt-4 md:pt-0 flex-shrink-0 justify-center items-center"
      >
        <img
          src={section1image}
          alt={section1title}
          class="w-96 h-80 object-cover"
        />
      </div>
    </div>
  </div>
  <div class="container mx-auto px-4 md:px-20">
    <!-- Main Container -->
    <div class="flex flex-col md:flex-row">
      <!-- Text Section -->
      <div class="md:w-2/3">
        <h2 class="md:text-2xl text-lg text-maroon font-bold">
          {section2title}
        </h2>
        <p
          class="mt-2 text-grey text-base md:text-lg font-semibold text-justify"
        >
          {section2content}
        </p>
      </div>

      <!-- Image Section -->
      <div
        class="md:w-1/3 md:mx-8 pt-4 md:pt-0 flex-shrink-0 justify-center items-center"
      >
        <img
          src={section2image}
          alt={section2title}
          class="w-96 h-80 object-cover"
        />
      </div>
    </div>
  </div>
  <div class="container mx-auto md:px-16">
    <slot />
  </div>
  <div class="container mx-auto px-4 md:px-20 py-8">
    <!-- Main Container -->
    <div class="flex flex-col md:flex-row">
      <!-- Text Section -->
      <div class="md:w-2/3">
        <h2 class="md:text-2xl text-lg text-maroon font-bold">
          {section3title}
        </h2>
        <p
          class="mt-2 text-grey text-base md:text-lg font-semibold text-justify"
        >
          {section3content}
        </p>
      </div>

      <!-- Image Section -->
      <div
        class="md:w-1/3 md:mx-8 pt-4 md:pt-0 flex-shrink-0 justify-center items-center"
      >
        <img
          src={section3image}
          alt={section3title}
          class="w-96 h-80 object-cover"
        />
      </div>
    </div>
  </div>
</Layout>
