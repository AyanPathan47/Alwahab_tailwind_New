      description : "Al-Wahab Foundation’s 10-years celebration Charity Dinner at Crystal Plaza, Birmingham turns into a remarkable success",
  },
  {
      image : "https://alwahabfoundation.org/wp-content/uploads/2024/11/awf-birmingham-event-charity-dinner-768x513.jpg.webp",
      date : "November 26, 2024",
      title : "Birmingham Charity Dinner 2024: Celebrating 10 Years of Al-Wahab Foundation",
      description : "Al-Wahab Foundation’s 10-years celebration Charity Dinner at Crystal Plaza, Birmingham turns into a remarkable success",
  },
  
]

const BannerData = [
{
    src: "/assets/images/appeals/water/Water5.jpg",
    title: "Build a Masjid: Your Generosity, The Best Sadaqah",
}
]

---
<Layout>
    <HeadersBanner HeadersBanners={BannerData} />
    <UmmahCharity />

    <LatestBlogcard LatestBlog={LatestBlooog}/>

    <div class="w-screen overflow-hidden mt-10">
        <div class="flex flex-wrap">
            <!-- First Image with Text Overlay -->
            <div class="relative w-full sm:w-1/2 lg:w-1/3  transform transition hover:scale-110 duration-300">
                <!-- The image -->
                <img class="w-full h-60 sm:h-80 lg:h-[400px] object-cover  " src="https://alwahabfoundation.org/wp-content/uploads/2023/11/Give-Zakat.jpg" alt="">
                <!-- Semi-transparent overlay -->
                <div class="absolute inset-0 bg-[#740B2E] opacity-70 z-10"></div>
                <!-- Text container -->
                <div class="absolute inset-0 flex top-52 justify-center z-20 px-2">
                    <p class="text-white px-4 ">
                        <span class="text-2xl font-semibold block">
                            CALCULATE YOUR ZAKAT
                            </span>
                        <span class="text-lg font-normal block mt-4 ">CALCULATING YOUR ZAKAT HAS
                            NEVER BEEN EASIER </span>
                        <a href="" class="mt-6 inline-block text-maroon font-medium px-5 py-1 bg-white rounded-full text-lg">Give Zakat</a>
                    </p>
                </div>
            </div>
    
            <!-- Second Image -->
            <div class="relative w-full sm:w-1/2 lg:w-1/3 transform transition hover:scale-110 duration-300">
                <!-- The image -->
                <img class="w-full h-60 sm:h-80 lg:h-[400px] object-cover" src="https://alwahabfoundation.org/wp-content/uploads/2023/11/Sadaqah-Saves-Lives.jpg" alt="">
                <!-- Semi-transparent overlay -->
                <div class="absolute inset-0 bg-customBeige opacity-70 z-10"></div>
                <!-- Text container -->
                <div class="absolute inset-0 flex top-52 justify-center z-20 px-4">
                    <p class=" text-white">
                        <span class="text-2xl font-semibold block">SADAQAH SAVES LIVES</span>
                        <span class="text-lg font-normal block mt-4">YOUR SADAQAH HELPS PEOPLE IN
                            DESPARATE NEED</span>
                        <a href="" class="mt-6 inline-block text-maroon px-5 font-medium  py-1 bg-white rounded-full text-lg">Donate Now</a>
                    </p>
                </div>
            </div>
    
            <!-- Third Image -->
            <div class="relative w-full lg:w-1/3 transform transition hover:scale-110 duration-300">
                <!-- The image -->
                <img class="w-full h-60 sm:h-80 lg:h-[400px] object-cover" src="https://alwahabfoundation.org/wp-content/uploads/2023/03/IMG_9857e.jpeg" alt="">
                <!-- Semi-transparent overlay -->
                <div class="absolute inset-0 bg-[#740B2E] opacity-70 z-10"></div>
                <!-- Text container -->
                <div class="absolute inset-0 flex top-52 justify-center z-20 px-4">
                    <p class="text-white">
                        <span class="text-2xl font-semibold block ">SET A MONTHLY DONATION</span>
                        <span class="text-lg font-normal block mt-4  pr-4">YOUR MONTHLY DIRECT DEBIT HELPS CHILDREN
                            STAY IN SCHOOL</span>
                        <a href="" class="mt-6 inline-block text-maroon font-medium  px-5 py-1 bg-white rounded-full text-lg">Calculate Now</a>
                    </p>
                </div>
            </div>
    
        </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-20 py-11 md:px-24">
        <div class="flex  justify-between mx-auto ">
          <div 
          style="box-shadow: 0px 0px 10px 2px rgba(90,89,89,0.418);"
          class="relative bg-white rounded-3xl md:my-5 shadow-grey md:h-[560px] w-[340px] h-auto md:w-[360px] overflow-hidden">
            <!-- Card Image -->
            <a class="relative block" href="#">
              <img
                class="relative inset-0 rounded-3xl w-full object-cover h-60 transition-opacity duration-300"
                src={item.image}
                alt="Blog Thumbnail"
              />
              <!-- Hover Overlay -->
              <div class="absolute inset-0 bg-[#7A132B] opacity-0 hover:opacity-20 transition-opacity duration-300 rounded-3xl"></div>
            </a>
            <!-- Card Content -->
            <div class="px-4 py-2">
              <p class="text-center text-grey py-2 text-sm">{item.date}</p>
              <a class="flex justify-center" href="#">
                <h5 class="md:text-xl text-base font-semibold tracking-tight text-grey text-center mt-2">
                  {item.title}
                </h5>
              </a>
              <p class="py-2 px-3 text-black text-center text-grey font-medium text-sm">
                {item.description}
              </p>
              <div class="absolute bottom-4 translate-x-24 ">
                <a
                  href="#"
                  class="px-6 py-3 inline-flex items-center text-base font-semibold text-white bg-[#740B2E] rounded-full hover:bg-[#c9945a] duration-300"
                >
                  Read More
                </a>
              </div>
            </div>
          </div>
        </div>
    </div>
    
    <div class="container mx-auto bg-[#aa71454D]  max-w-screen-2xl">
        <div class="row py-16">
          <!-- Form Section -->
          <div class="flex justify-center mt-9">
            <div class="bg-maroon px-10 py-8 mb-12 rounded-xl w-full max-w-2xl">
              <p class="text-center text-white text-2xl font-semibold">Sign up to our Newsletter</p>
      
              <form action="#" method="post" class="mt-6">
                <!-- Form Group -->
                <div class="flex flex-col ">
                  <label for="email" class="block text-white text-sm font-medium mb-2">Email Address 
                    <span class="text-[#e04562] text-lg">*</span>
                  </label>
                  <input id="email" name="email" type="email" placeholder="Type your email address here"
                    class="w-full px-4 py-1 border bg-[#ededed] rounded-xl border-maroon shadow-sm placeholder:text-maroon text-maroon focus:ring focus:ring-customBeige focus:border-customBeige"
                  />
                  <a href="" class="mt-5 rounded-md w-36 py-2 text-maroon hover:text-white hover:bg-customBeige font-semibold text-center bg-white">Send Message</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
</Layout>