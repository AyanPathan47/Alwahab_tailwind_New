---
import Layout from '../layouts/Layout.astro';
import UmmahCharity from '../components/Ummah_Charity.astro';
---
<Layout>
    <div class="relative w-full">
        <!-- Banner Image -->
        <img
            src="/assets/images/website-banner-UK-winter-1.jpg"
            class="w-full sm:h-96 md:h-[510px]  object-cover"
            alt="Website banner UK winter"
        />
        
        <!-- Gradient Overlay -->
        <div class="absolute inset-0 bg-gradient-to-t from-[#740B2E] via-transparent to-[#94434A00] opacity-60"></div>
        
        <!-- Text Overlay at the bottom -->
        <div class="absolute bottom-3 left-0 sm:bottom-1 w-full p-4">
            <p class="text-lg md:text-5xl text-white text-center font-bold">
                AFGHAINSTAN <br/> EARTHQUAKE APPEAL
            </p>
        </div>
    </div>
    <UmmahCharity/>

    <div class="container">
        <div class="row">
            <p class="text-center text-3xl  text-maroon font-bold mt-20">Afghanistan Earthquake Appeal</p>
            <p class=" mt-7 text-grey text-lg font-medium">The long-suffering Afghans once again face a daunting challenge as a massive earthquake measuring 

            </p>
        </div>
    </div>
</Layout>