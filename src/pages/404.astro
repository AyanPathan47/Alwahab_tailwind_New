---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="relative w-screen mt-5">
        <div class="absolute inset-0 bg-[#ede1d7] opacity-15"></div>
        <!-- Background Container -->
        <div
            class="relative z-20 bg-cover bg-center md:h-[700px]   flex flex-col md:flex-row items-center justify-between px-4 md:px-8 py-8"
            style="background-image: url('https://alwahabfoundation.org/wp-content/uploads/2022/07/website-pattern.png');"
        >
            <div
                class="relative flex flex-col md:flex-row items-center justify-between w-full"
            >
                <!-- Left-Side Image -->
                <div class="w-full md:w-1/3 mb-8 md:mb-0">
                    <img
                        src="https://alwahabfoundation.org/wp-content/uploads/2024/09/Page-Not-Found-1536x1536.png"
                        alt="Left Image"
                        class="w-full h-auto object-cover"
                    />
                </div>

                <!-- Right-Side Text -->
                <div
                    class="w-full md:w-2/3 text-center text-gray-700 space-y-4"
                >
                    <!-- Centered Quote Icon -->
                    <div class="flex justify-center items-center mb-4">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="fill-maroon stroke-maroon w-12 h-12"
                            viewBox="0 0 512 512"
                            ><path
                                d="M256 32c14.2 0 27.3 7.5 34.5 19.8l216 368c7.3 12.4 7.3 27.7 .2 40.1S486.3 480 472 480L40 480c-14.3 0-27.6-7.7-34.7-20.1s-7-27.8 .2-40.1l216-368C228.7 39.5 241.8 32 256 32zm0 128c-13.3 0-24 10.7-24 24l0 112c0 13.3 10.7 24 24 24s24-10.7 24-24l0-112c0-13.3-10.7-24-24-24zm32 224a32 32 0 1 0 -64 0 32 32 0 1 0 64 0z"
                            ></path></svg
                        >
                    </div>

                    <!-- Heading -->
                    <h2 class="text-2xl md:text-4xl font-semibold text-maroon">
                        THE PAGE NOT FOUND
                    </h2>

                    <!-- Paragraph -->
                    <p
                        class="text-sm md:text-lg leading-relaxed font-bold px-4"
                    >
                        The page you're looking for might have been moved, <br
                        />removed, renamed, or might never existed.
                    </p>

                    <!-- Button -->
                    <div>
                        <a
                            class="text-white font-semibold text-base rounded-full md:text-lg px-4 py-2 bg-customBeige hover:bg-maroon"
                            href="#"
                        >
                            BACK TO HOME
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
