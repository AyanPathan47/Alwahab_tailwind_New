<script is:inline>
    function ZakatCalculator() {
        let cashAtHomeBank =
            parseFloat(document.getElementById("cashAtHomeBank").value) || 0;
        let goldSilver =
            parseFloat(document.getElementById("goldSilver").value) || 0;
        let property =
            parseFloat(document.getElementById("property").value) || 0;
        let pensions =
            parseFloat(document.getElementById("pensions").value) || 0;
        let shares = parseFloat(document.getElementById("shares").value) || 0;
        let otherInvestments =
            parseFloat(document.getElementById("otherInvestments").value) || 0;
        let moneyOwedToYou =
            parseFloat(document.getElementById("moneyOwedToYou").value) || 0;
        let businessValue =
            parseFloat(document.getElementById("businessValue").value) || 0;
        let businessDebts =
            parseFloat(document.getElementById("businessDebts").value) || 0;
        let unpaidDebts =
            parseFloat(document.getElementById("unpaidDebts").value) || 0;
        let totalAssets = document.getElementById("totalAssets");
        let zakatPayable = document.getElementById("zakatPayable");

        let totalAmount =
            cashAtHomeBank +
            goldSilver +
            property +
            pensions +
            shares +
            otherInvestments +
            moneyOwedToYou +
            businessValue -
            businessDebts -
            unpaidDebts;
        if (totalAmount >= 486) {
            totalAssets.innerText = `£${totalAmount}`;
            zakatPayable.innerText = `£${(totalAmount * 0.025).toFixed(2)}`;
        } else {
            totalAssets.innerHTML = `£${totalAmount}`;
            zakatPayable.innerHTML = `£0.00`;
        }
    }
</script>
