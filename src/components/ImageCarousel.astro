---
export interface Props{
    imageCarousel:{
        src: string,
        alt: string,
    }[];
}
const {imageCarousel} = Astro.props;
---

<div class="container flex flex-col items-center justify-center  px-20 py-8">

    <button
            id="prev-btn2"
            class="absolute left-0 -translate-y-1/2 flex h-10 w-10 items-center justify-center rounded-full border border-gray-300 bg-white shadow transition-all hover:bg-gray-100 focus:outline-none md:left-0 md:h-12 md:w-12"
        >
            <i class="fa-solid fa-chevron-left text-maroon text-2xl md:text-3xl"></i>
        </button>
   
    <div class="image-container flex justify-between gap-7 mx-auto overflow-x-auto scroll-smooth px-11 space-x-4 w-full">
        {imageCarousel.map((item) => (
          <img class="your-class-name w-80 h-60" src={item.src} alt={item.alt || 'Image'} />
        ))}
      </div>
       <!-- Next Button -->
       <button
       id="next-btn1"
       class="absolute right-0 -translate-y-1/2 flex h-10 w-10 items-center justify-center rounded-full border border-gray-300 bg-white shadow transition-all hover:bg-gray-100 focus:outline-none md:right-0 md:h-12 md:w-12"
   >
       <i class="fa-solid fa-chevron-right text-maroon text-2xl md:text-3xl"></i>
   </button>
</div>
