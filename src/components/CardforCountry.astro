---
export interface Props {
    CountryCardDetails :{
        name: string;
        title: string ;
        amount : number |string;
        
    }[];
}    
const {CountryCardDetails} = Astro.props;
---


<div class="container mx-auto mt-20">
    <div class="flex justify-center ">
     <div class="grid grid-cols-1 gap-8 md:grid-cols-3 ">
        {CountryCardDetails.map((CountryCardDetail)=>(
              <div class="bg-white rounded-lg shadow-lg w-80 overflow-hidden relative">
            <a class="flex justify-center" href="#">
                <img class="rounded-t-lg w-full object-cover h-80" src="https://picsum.photos/300/200" alt="Card image" />
            </a>
            <div class="absolute inset-0 flex items-center justify-center">
                <button class="absolute text-lg font-semibold bg-white text-black hover:bg-[#c9945a] hover:text-white duration-300 inline-flex items-center justify-center w-44 top-60 left-1/2 transform -translate-x-1/2 h-8 rounded-md shadow-md">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-earth mr-2">
                        <path d="M21.54 15H17a2 2 0 0 0-2 2v4.54"/>
                        <path d="M7 3.34V5a3 3 0 0 0 3 3a2 2 0 0 1 2 2c0 1.1.9 2 2 2a2 2 0 0 0 2-2c0-1.1.9-2 2-2h3.17"/>
                        <path d="M11 21.95V18a2 2 0 0 0-2-2a2 2 0 0 1-2-2v-1a2 2 0 0 0-2-2H2.05"/>
                        <circle cx="12" cy="12" r="10"/>
                    </svg>
                    {CountryCardDetail.name}
                </button>
            </div>
            <div class="p-5">
                <a class="flex justify-center" href="#">
                    <h5 class="text-xl font-semibold tracking-tight text-black text-center mt-2">{CountryCardDetail.title}</h5>
                </a>
                <p class="mb-5 mt-5 text-sm text-black flex items-center justify-center font-semibold sm:text-base md:text-xl">
                    <svg xmlns="http://www.w3.org/2000/svg" width="37" height="37" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-receipt-pound-sterling">
                        <path d="M4 2v20l2-1 2 1 2-1 2 1 2-1 2 1 2-1 2 1V2l-2 1-2-1-2 1-2-1-2 1-2-1-2 1Z"/>
                        <path d="M8 13h5"/>
                        <path d="M10 17V9.5a2.5 2.5 0 0 1 5 0"/>
                        <path d="M8 17h7"/>
                    </svg>
                    {CountryCardDetail.amount|| 'Any amount'}
                </p>
                <p class="flex items-center justify-center mb-7 mt-2 relative">
                    <a href="#" class="px-6 py-3 items-center inline-flex sm:text-sm md:text-base font-semibold text-white bg-[#740B2E] rounded-full hover:bg-[#c9945a] duration-300">
                        DONATE NOW
                        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10" stroke="currentColor" stroke-width="2">
                            <path d="M1 5h12m0 0L9 1m4 4L9 9" />
                        </svg>
                    </a>
                </p>
            </div>
        </div>
        ))}
    </div>
  </div> 
</div>


<div class="container">
    <div class="row">

    </div>
</div>
